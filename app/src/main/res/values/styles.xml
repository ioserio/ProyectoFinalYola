<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo común para botones Material -->
    <style name="Widget.Final2025.MaterialButton" parent="Widget.Material3.Button">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Final2025.Rounded12</item>
    </style>

    <!-- Estilo común para campos de texto Material -->
    <style name="Widget.Final2025.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Usar shapeAppearanceOverlay para esquinas en M3, evitando boxCornerRadius* -->
        <item name="shapeAppearanceOverlay">@style/Shape.Final2025.Rounded12</item>
    </style>

    <!-- Forma común redondeada para componentes Material -->
    <style name="Shape.Final2025.Rounded12" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Tipografía común -->
    <style name="TextAppearance.Final2025.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/color_on_background</item>
    </style>

    <style name="TextAppearance.Final2025.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/color_on_surface</item>
    </style>
</resources>
